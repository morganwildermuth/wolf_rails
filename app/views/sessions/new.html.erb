<br><br>
<div class="row">
  <div class="pagination-centered">
    <% if flash[:notice] %>
      <div class="error_alert"><%= flash[:notice]  %> </div>
    <% end %>
    <%= form_for :sessions, :url => url_for(:controller => 'sessions', :action => 'create', method: :post) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <p><%= f.submit 'Sign In' %></p>
    <% end %>
  </div>
</div>

